<% provide :title, t("edit_user") %>
<h1><%= t "update_your_profile" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form", action: t("edit_user") %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to Settings.link.gravatar, { :target => "_blank" } do %>
        <%= t "change_gravatar" %>
      <% end %>
    </div>
  </div>
</div>
