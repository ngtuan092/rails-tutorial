<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.size.micropost), micropost.user %>
  <span class="user"><%= link_to micropost.user_name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>
  </span>
  <span class="timestamp">
    <%= t "posted" %> <%= time_ago_in_words micropost.created_at %> <%= t "ago" %>
    <% if current_user? micropost.user %>
      <%= link_to t("delete"), micropost, data: {turbo_method: :delete, turbo_confirm: t("confirm") } %>
    <% end %>
  </span>
</li>
