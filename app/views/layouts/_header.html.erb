<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("app_name"), static_pages_home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.title"),   static_pages_home_path %></li>
        <li><%= link_to t("help.title"),   static_pages_help_path %></li>
        <li><%= link_to t("contact.title"), static_pages_contact_path %></li>
        <% if I18n.locale == :en %>
          <li class="nav-item">
            <%= link_to (t"enl"), locale:"vi" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to (t"vnl"), locale:"en" %>
          </li>
        <% end %>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to t("users"), "#" %>
          </li>
          <li class="dropdown" id="account">
            <%= link_to("#") do %>
              <%= t "account" %>
              <b class="caret"></b>
            <% end %>
          </li>
          <ul class="dropdown-menu" id="dropdown-menu">
            <li>
              <%= link_to t("profile"), current_user %>
            </li>
            <li>
              <%= link_to t("settings"), "#" %>
            </li>
            <li class="divider"></li>
            <li>
              <%= link_to t("log_out"), logout_path, data: { "turbo-method": :delete } %>
            </li>
          </ul>
        <% else %>
          <li class="nav-item">
            <%= link_to t("log_in"), login_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
