<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("new_micropost") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.validate.im.type, id: "micropost_image" %>
  </span>
  <%= f.submit t("post"), class: "btn btn-primary" %>
<% end %>
